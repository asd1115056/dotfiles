#!/usr/bin/env bash
set -euo pipefail

# ---------- Colored logging functions ----------
info()    { echo -e "\033[0;36m[i]\033[0m $*"; }
warn()    { echo -e "\033[1;33m[!]\033[0m $*"; }
success() { echo -e "\033[0;32m[✔]\033[0m $*"; }
error()   { echo -e "\033[0;31m[✘]\033[0m $*" >&2; }

# ---------- Variables ----------
OS_ID="{{ .osid | lower }}"

TMUX_SRC="$HOME/.local/.oh-my-tmux/.tmux.conf"
TMUX_DEST="$HOME/.tmux.conf"
FONT_DEST="$HOME/.local/share/fonts/JetBrainsMono"

# ---------- Functions ----------

link_tmux_config() {
  warn "Linking tmux runtime config..."
  if [ -f "$TMUX_SRC" ]; then
    ln -sf "$TMUX_SRC" "$TMUX_DEST"
    success "Linked tmux config to $TMUX_DEST"
  else
    warn "tmux config source not found: $TMUX_SRC"
  fi
}

change_shell_to_zsh() {
  if zsh_path="$(command -v zsh 2>/dev/null)"; then
    info "Changing default shell to: $zsh_path"
    if chsh -s "$zsh_path"; then
      success "Shell changed to zsh."
    else
      warn "Failed to change shell with chsh. You may need to run manually or with sudo."
    fi
  else
    warn "zsh not found in PATH. Skipping shell change."
  fi
}

refresh_and_verify_font() {
  info "Refreshing font cache..."
  fc-cache -fv "$FONT_DEST"

  if fc-list | grep -i "JetBrains" >/dev/null; then
    success "JetBrains Mono Nerd Font was installed successfully!"
  else
    error "The installation seems to have failed. Please manually check if the fonts appear correctly in $FONT_DEST"
  fi
}

generate_completions() {
  info "Generating shell completions..."
  local comp_dir="$HOME/.local/share/zinit/completions"
  mkdir -p "$comp_dir"

  # Generate chezmoi completion
  if command -v chezmoi &>/dev/null; then
    chezmoi completion zsh > "$comp_dir/_chezmoi"
    success "Generated chezmoi completion"
  fi

  # Generate ripgrep completion
  if command -v rg &>/dev/null; then
    rg --generate complete-zsh > "$comp_dir/_rg"
    success "Generated ripgrep completion"
  fi

  # Generate fd completion
  if command -v fd &>/dev/null; then
    fd --gen-completions=zsh > "$comp_dir/_fd"
    success "Generated fd completion"
  fi
}

# ---------- Main ----------

if [[ "$OS_ID" == *"linux"* ]]; then
  refresh_and_verify_font
  link_tmux_config
  generate_completions
  change_shell_to_zsh
fi
